{
  "name": "@pixeloven-webpack/config",
  "version": "6.0.0-beta.21",
  "description": "Webpack configuration for client and server",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "homepage": "https://github.com/pixeloven/pixeloven",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "author": "Brian Gebel",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@pixeloven-core/common": "^6.0.0-beta.21",
    "@pixeloven-core/env": "^6.0.0-beta.21",
    "@pixeloven-core/filesystem": "^6.0.0-beta.21",
    "@pixeloven-core/logger": "^6.0.0-beta.21",
    "@pixeloven-webpack/ts-loader": "^6.0.0-beta.21",
    "autoprefixer": "9.7.3",
    "case-sensitive-paths-webpack-plugin": "2.2.0",
    "circular-dependency-plugin": "5.2.0",
    "css-loader": "3.4.0",
    "file-loader": "5.0.2",
    "fork-ts-checker-webpack-plugin": "3.1.1",
    "mini-css-extract-plugin": "0.9.0",
    "null-loader": "3.0.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "3.0.0",
    "react-dev-utils": "10.0.0",
    "sass": "1.23.7",
    "sass-loader": "8.0.0",
    "terser-webpack-plugin": "2.3.1",
    "time-fix-plugin": "2.0.6",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.20.1",
    "webpack": "4.41.4",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-manifest-plugin": "2.2.0",
    "webpack-node-externals": "1.7.2"
  },
  "devDependencies": {
    "@pixeloven/tasks": "^6.0.0-beta.19",
    "@types/autoprefixer": "9.6.1",
    "@types/case-sensitive-paths-webpack-plugin": "2.1.4",
    "@types/circular-dependency-plugin": "5.0.0",
    "@types/mini-css-extract-plugin": "0.8.0",
    "@types/optimize-css-assets-webpack-plugin": "5.0.1",
    "@types/terser-webpack-plugin": "2.2.0",
    "@types/webpack": "4.41.0",
    "@types/webpack-bundle-analyzer": "2.13.3",
    "@types/webpack-manifest-plugin": "2.1.0",
    "@types/webpack-node-externals": "1.7.0",
    "lint-staged": "9.5.0"
  },
  "scripts": {
    "clean": "pixeloven-tasks clean",
    "compile": "pixeloven-tasks compile:ts",
    "document": "pixeloven-tasks document:ts src",
    "lint": "yarn lint:ts",
    "lint:ts": "pixeloven-tasks lint:ts src/**/*.{ts,tsx}",
    "pretty": "yarn pretty:ts",
    "pretty:ts": "pixeloven-tasks pretty:ts src/**/*.{ts,tsx}",
    "precommit": "lint-staged",
    "predocument": "pixeloven-tasks document:clean",
    "pretest": "pixeloven-tasks test:clean",
    "test": "pixeloven-tasks test --color --coverage",
    "test:ci": "pixeloven-tasks test --ci --coverage",
    "test:watch": "pixeloven-tasks test:watch"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pixeloven-tasks pretty:ts",
      "pixeloven-tasks lint:ts",
      "git add"
    ]
  }
}
