{
  "name": "@pixeloven-webpack/ts-loader",
  "version": "6.0.0-beta.25",
  "description": "Collection of loaders to handle TypeScript and other advanced JS features",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "homepage": "https://www.pixeloven.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "author": "Brian Gebel",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/core": "7.7.7",
    "@babel/plugin-proposal-class-properties": "7.7.4",
    "@babel/plugin-proposal-decorators": "7.7.4",
    "@babel/plugin-syntax-dynamic-import": "7.7.4",
    "@babel/preset-env": "7.7.7",
    "@babel/preset-react": "7.7.4",
    "@babel/preset-typescript": "7.7.7",
    "@pixeloven-core/filesystem": "^6.0.0-beta.24",
    "babel-loader": "8.0.6",
    "ts-loader": "6.2.1",
    "typescript": "3.7.4"
  },
  "devDependencies": {
    "@pixeloven-tooling/compiler": "^6.0.0-beta.24",
    "@pixeloven-tooling/linter": "^6.0.0-beta.24",
    "@pixeloven-tooling/pretty": "^6.0.0-beta.24",
    "@pixeloven-tooling/test": "^6.0.0-beta.24",
    "@pixeloven-webpack/types": "^6.0.0-beta.24",
    "lint-staged": "9.5.0"
  },
  "scripts": {
    "compile": "pixeloven-compiler ts",
    "lint": "pixeloven-linter ts src/**/*.{ts,tsx}",
    "lint:ts": "pixeloven-linter ts src/**/*.{ts,tsx}",
    "pretty": "yarn pretty:ts",
    "pretty:ts": "pixeloven-pretty ts src/**/*.{ts,tsx}",
    "precommit": "lint-staged",
    "test": "pixeloven-test --color --coverage",
    "test:ci": "pixeloven-test --ci --coverage",
    "test:watch": "pixeloven-test --watch"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pixeloven-pretty ts",
      "pixeloven-linter ts --fix",
      "pixeloven-linter ts",
      "git add"
    ]
  }
}
