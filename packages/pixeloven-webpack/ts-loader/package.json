{
    "name": "@pixeloven-webpack/ts-loader",
    "version": "6.0.0-rc.1",
    "description": "Collection of loaders to handle TypeScript and other advanced JS features",
    "main": "dist/lib/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/"
    ],
    "homepage": "https://www.pixeloven.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pixeloven/pixeloven.git"
    },
    "author": "Brian Gebel",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@babel/core": "7.8.4",
        "@babel/plugin-proposal-class-properties": "7.8.3",
        "@babel/plugin-proposal-decorators": "7.8.3",
        "@babel/plugin-syntax-dynamic-import": "7.8.3",
        "@babel/preset-env": "7.8.4",
        "@babel/preset-react": "7.8.3",
        "@babel/preset-typescript": "7.8.3",
        "@pixeloven-core/filesystem": "^6.0.0-rc.1",
        "babel-loader": "8.0.6",
        "ts-loader": "6.2.1",
        "typescript": "3.7.5"
    },
    "devDependencies": {
        "@pixeloven-tooling/compiler": "^6.0.0-rc.1",
        "@pixeloven-tooling/linter": "^6.0.0-rc.1",
        "@pixeloven-tooling/pretty": "^6.0.0-beta.26",
        "@pixeloven-tooling/test": "^6.0.0-rc.1",
        "@pixeloven-webpack/types": "^6.0.0-beta.26",
        "lint-staged": "10.0.7"
    },
    "scripts": {
        "compile": "pixeloven-compiler ts",
        "compile:watch": "pixeloven-compiler ts --watch",
        "lint": "pixeloven-linter ts src/**/*.{ts,tsx}",
        "lint:ts": "pixeloven-linter ts src/**/*.{ts,tsx}",
        "pretty": "pixeloven-pretty **/*.{json,md,ts,tsx}",
        "precommit": "lint-staged",
        "test": "pixeloven-test --color --coverage",
        "test:ci": "pixeloven-test --ci --coverage",
        "test:watch": "pixeloven-test --watch"
    },
    "lint-staged": {
        "*.{json,md}": [
            "pixeloven-pretty"
        ],
        "src/**/*.{ts,tsx}": [
            "pixeloven-pretty",
            "pixeloven-linter ts --fix",
            "pixeloven-linter ts"
        ]
    }
}
