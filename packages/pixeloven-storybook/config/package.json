{
  "name": "@pixeloven-storybook/config",
  "version": "6.0.0-beta.9",
  "description": "Storybook configuration",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "homepage": "https://github.com/pixeloven/pixeloven",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "author": "Brian Gebel",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/core": "7.5.5",
    "@pixeloven-core/filesystem": "^6.0.0-beta.9",
    "@pixeloven-storybook/addons": "^6.0.0-beta.9",
    "@storybook/core": "5.1.10",
    "@storybook/react": "5.1.10",
    "babel-loader": "8.0.6",
    "css-loader": "3.1.0",
    "deepmerge": "4.0.0",
    "sass-loader": "7.2.0",
    "style-loader": "0.23.1",
    "ts-loader": "6.0.4",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "3.5.3",
    "webpack": "4.38.0"
  },
  "devDependencies": {
    "@pixeloven/tasks": "^6.0.0-beta.9",
    "@types/mini-css-extract-plugin": "0.8.0",
    "@types/storybook__addon-knobs": "5.0.3",
    "@types/storybook__addon-options": "4.0.2",
    "@types/storybook__addon-viewport": "4.1.1",
    "@types/storybook__react": "4.0.2",
    "lint-staged": "9.2.5"
  },
  "peerDependencies": {
    "react": ">=16.3",
    "react-dom": ">=16.3"
  },
  "scripts": {
    "clean": "pixeloven-tasks clean",
    "compile": "pixeloven-tasks compile:ts",
    "document": "pixeloven-tasks document:ts src",
    "lint": "yarn lint:ts",
    "lint:ts": "pixeloven-tasks lint:ts src/**/*.{ts,tsx}",
    "pretty": "yarn pretty:ts",
    "pretty:ts": "pixeloven-tasks pretty:ts src/**/*.{ts,tsx}",
    "precompile": "pixeloven-tasks compile:clean",
    "precommit": "lint-staged",
    "predocument": "pixeloven-tasks document:clean",
    "pretest": "pixeloven-tasks test:clean",
    "test": "pixeloven-tasks test --color --coverage",
    "test:ci": "pixeloven-tasks test --ci --coverage",
    "test:watch": "pixeloven-tasks test:watch"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pixeloven-tasks pretty:ts",
      "pixeloven-tasks lint:ts",
      "git add"
    ]
  }
}
