{
  "name": "@pixeloven-storybook/config",
  "version": "6.0.0-beta.28",
  "description": "Storybook configuration",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "homepage": "https://www.pixeloven.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "author": "Brian Gebel",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/core": "7.8.4",
    "@pixeloven-core/filesystem": "^6.0.0-beta.28",
    "@pixeloven-storybook/common": "^6.0.0-beta.28",
    "@pixeloven-webpack/ts-loader": "^6.0.0-beta.28",
    "@pixeloven-webpack/types": "^6.0.0-beta.26",
    "css-loader": "3.4.1",
    "deepmerge": "4.2.2",
    "fork-ts-checker-webpack-plugin": "3.1.1",
    "sass": "1.24.1",
    "sass-loader": "8.0.0",
    "style-loader": "1.1.2",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "webpack": "4.41.5"
  },
  "devDependencies": {
    "@pixeloven-tooling/compiler": "^6.0.0-beta.28",
    "@pixeloven-tooling/linter": "^6.0.0-beta.28",
    "@pixeloven-tooling/pretty": "^6.0.0-beta.26",
    "@pixeloven-tooling/test": "^6.0.0-beta.28",
    "@types/mini-css-extract-plugin": "0.8.0",
    "lint-staged": "9.5.0"
  },
  "scripts": {
    "compile": "pixeloven-compiler ts",
    "compile:watch": "pixeloven-compiler ts --watch",
    "lint": "pixeloven-linter ts src/**/*.{ts,tsx}",
    "lint:ts": "pixeloven-linter ts src/**/*.{ts,tsx}",
    "pretty": "yarn pretty:ts",
    "pretty:ts": "pixeloven-pretty ts src/**/*.{ts,tsx}",
    "precommit": "lint-staged",
    "test": "pixeloven-test --color --coverage",
    "test:ci": "pixeloven-test --ci --coverage",
    "test:watch": "pixeloven-test --watch"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pixeloven-pretty ts",
      "pixeloven-linter ts --fix",
      "pixeloven-linter ts",
      "git add"
    ]
  }
}
