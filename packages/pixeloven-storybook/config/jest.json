{
  "bail": true,
  "verbose": true,
  "preset": "ts-jest",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
  ],
  "testMatch": [
    "<rootDir>/src/**/*.test.(j|t)s?(x)"
  ],
  "testEnvironment": "node",
  "testURL": "http://localhost",
  "moduleFileExtensions": [
    "js",
    "json",
    "jsx",
    "ts",
    "tsx"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{js,jsx,ts,tsx}",
    "!<rootDir>/src/config/addons.ts",
    "!<rootDir>/src/config/config.ts",
    "!<rootDir>/src/index.ts",
    "!**/node_modules/**"
  ]
}