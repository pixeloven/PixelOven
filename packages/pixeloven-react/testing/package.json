{
  "name": "@pixeloven-react/testing",
  "version": "6.0.0-beta.22",
  "description": "Encapsulates react testing dependencies and provides a simple abstraction for common testing functionality.",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "homepage": "https://github.com/pixeloven/pixeloven",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "author": "Brian Gebel",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@types/enzyme": "3.10.3",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "devDependencies": {
    "@pixeloven-tooling/compiler": "^6.0.0-beta.22",
    "@pixeloven-tooling/linter": "^6.0.0-beta.22",
    "@pixeloven-tooling/pretty": "^6.0.0-beta.22",
    "@pixeloven-tooling/test": "^6.0.0-beta.22",
    "lint-staged": "9.5.0"
  },
  "scripts": {
    "clean": "pixeloven-tasks clean",
    "compile": "pixeloven-tasks compile:ts",
    "document": "pixeloven-tasks document:ts src",
    "lint": "yarn lint:ts",
    "lint:ts": "pixeloven-tasks lint:ts src/**/*.{ts,tsx}",
    "pretty": "yarn pretty:ts",
    "pretty:ts": "pixeloven-tasks pretty:ts src/**/*.{ts,tsx}",
    "precommit": "lint-staged",
    "predocument": "pixeloven-tasks document:clean",
    "pretest": "pixeloven-tasks test:clean",
    "test": "pixeloven-tasks test --color --coverage",
    "test:ci": "pixeloven-tasks test --ci --coverage",
    "test:watch": "pixeloven-tasks test:watch"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pixeloven-tasks pretty:ts",
      "pixeloven-tasks lint:ts",
      "git add"
    ]
  }
}
