{
    "name": "@pixeloven-react/testing",
    "version": "6.3.0",
    "description": "Encapsulates react testing dependencies and provides a simple abstraction for common testing functionality.",
    "main": "dist/lib/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/"
    ],
    "homepage": "https://www.pixeloven.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pixeloven/pixeloven.git"
    },
    "author": "Brian Gebel",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@types/enzyme": "3.10.7",
        "@types/enzyme-adapter-react-16": "1.0.6",
        "enzyme": "3.11.0",
        "enzyme-adapter-react-16": "1.15.5"
    },
    "devDependencies": {
        "@pixeloven-react/common": "^6.3.0",
        "@pixeloven-tooling/compiler": "^6.2.0",
        "@pixeloven-tooling/linter": "^6.3.0",
        "@pixeloven-tooling/pretty": "^6.2.0",
        "@pixeloven-tooling/test": "^6.2.0",
        "lint-staged": "10.4.2",
        "react": "16.13.1",
        "react-dom": "16.13.1"
    },
    "peerDependencies": {
        "@pixeloven-react/common": "6.x"
    },
    "scripts": {
        "compile": "pixeloven-compiler ts",
        "compile:watch": "pixeloven-compiler ts --watch",
        "lint": "pixeloven-linter ts src/**/*.{ts,tsx}",
        "lint:ts": "pixeloven-linter ts src/**/*.{ts,tsx}",
        "pretty": "pixeloven-pretty **/*.{json,md,ts,tsx}",
        "precommit": "lint-staged",
        "test": "pixeloven-test --color --coverage",
        "test:ci": "pixeloven-test --ci --coverage",
        "test:watch": "pixeloven-test --watch"
    },
    "lint-staged": {
        "*.{json,md}": [
            "pixeloven-pretty"
        ],
        "src/**/*.{ts,tsx}": [
            "pixeloven-pretty",
            "pixeloven-linter ts --fix",
            "pixeloven-linter ts"
        ]
    }
}
