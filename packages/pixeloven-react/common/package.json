{
    "name": "@pixeloven-react/common",
    "version": "6.1.0",
    "description": "Encapsulates react dependencies and provides a simple abstraction for common project functionality.",
    "main": "dist/lib/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/"
    ],
    "homepage": "https://www.pixeloven.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pixeloven/pixeloven.git"
    },
    "author": "Brian Gebel",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@types/classnames": "2.2.10",
        "@types/react": "16.9.41",
        "@types/react-dom": "16.9.8",
        "classnames": "2.2.6",
        "react": "16.12.0",
        "react-dom": "16.12.0"
    },
    "devDependencies": {
        "@pixeloven-react/testing": "^6.1.0",
        "@pixeloven-tooling/compiler": "^6.1.0",
        "@pixeloven-tooling/linter": "^6.1.0",
        "@pixeloven-tooling/pretty": "^6.1.0",
        "@pixeloven-tooling/test": "^6.1.0",
        "lint-staged": "10.2.7"
    },
    "peerDependencies": {
        "react": "16.x",
        "react-dom": "16.x"
    },
    "scripts": {
        "compile": "pixeloven-compiler ts",
        "compile:watch": "pixeloven-compiler ts --watch",
        "lint": "pixeloven-linter ts src/**/*.{ts,tsx}",
        "lint:ts": "pixeloven-linter ts src/**/*.{ts,tsx}",
        "pretty": "pixeloven-pretty **/*.{json,md,ts,tsx}",
        "precommit": "lint-staged",
        "test": "pixeloven-test --color --coverage",
        "test:ci": "pixeloven-test --ci --coverage",
        "test:watch": "pixeloven-test --watch"
    },
    "lint-staged": {
        "*.{json,md}": [
            "pixeloven-pretty"
        ],
        "src/**/*.{ts,tsx}": [
            "pixeloven-pretty",
            "pixeloven-linter ts --fix",
            "pixeloven-linter ts"
        ]
    }
}
