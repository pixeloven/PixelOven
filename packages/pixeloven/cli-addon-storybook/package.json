{
  "name": "@pixeloven/cli-addon-storybook",
  "version": "6.0.0-beta.31",
  "description": "PixelOven CLI addon for storybook based development",
  "main": "dist/lib/index.js",
  "types": "dist/types/types.d.ts",
  "files": [
    "dist/"
  ],
  "homepage": "https://www.pixeloven.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "author": "Brian Gebel",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@pixeloven-core/exceptions": "^6.0.0-beta.28",
    "@pixeloven-storybook/common": "^6.0.0-beta.30",
    "@pixeloven-storybook/config": "^6.0.0-beta.31",
    "@pixeloven/cli": "^6.0.0-beta.29"
  },
  "devDependencies": {
    "@pixeloven-tooling/compiler": "^6.0.0-beta.28",
    "@pixeloven-tooling/linter": "^6.0.0-beta.28",
    "@pixeloven-tooling/pretty": "^6.0.0-beta.26",
    "@pixeloven-tooling/test": "^6.0.0-beta.28",
    "lint-staged": "9.5.0"
  },
  "scripts": {
    "compile": "pixeloven-compiler ts",
    "compile:watch": "pixeloven-compiler ts --watch",
    "lint": "pixeloven-linter ts src/**/*.{ts,tsx}",
    "lint:ts": "pixeloven-linter ts src/**/*.{ts,tsx}",
    "pretty": "yarn pretty:ts",
    "pretty:ts": "pixeloven-pretty ts src/**/*.{ts,tsx}",
    "precommit": "lint-staged",
    "test": "pixeloven-test --color --coverage",
    "test:ci": "pixeloven-test --ci --coverage",
    "test:watch": "pixeloven-test --watch"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pixeloven-pretty ts",
      "pixeloven-linter ts --fix",
      "pixeloven-linter ts",
      "git add"
    ]
  }
}
