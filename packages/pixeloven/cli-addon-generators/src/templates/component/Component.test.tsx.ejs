import "jest";
import React from "react";
import {shallow} from "@pixeloven-react/testing";

import {<%= props.name %>} from "./index";

configure({
    adapter: new ReactSixteenAdapter(),
});

describe("<% if (props.nameSpace) { %><%= props.nameSpace %>/<% } %><%= props.atomicType %>s/<%= props.name %>", () => {
    it("should render a `div` element by default", () => {
        const wrapper = shallow(<<%= props.name %> />);
        expect(wrapper.find("div").length).toEqual(1);
    });

    it("should extend passed classes", () => {
        const wrapper = shallow(<<%= props.name %> className={"test-class"} />);
        expect(wrapper.hasClass("<%= props.className %>")).toEqual(true);
        expect(wrapper.hasClass("test-class")).toEqual(true);
    });
});
