{
    "extends": "../../../tsconfig",
    "compilerOptions": {
        "rootDir": "./src",
        "declarationDir": "./dist/types",
        "outDir": "./dist/lib",
        "paths": {
            "@*": ["src/*"]
        }
    },
    "exclude": [
        "**/coverage",
        "**/dist",
        "**/docs",
        "**/node_modules",
        "**/stats",
        "**/*.stories.tsx",
        "**/*.test.tsx",
        "**/*.stories.ts",
        "**/*.test.ts",
        "**/__mocks__",
        "src/templates"
    ]
}
