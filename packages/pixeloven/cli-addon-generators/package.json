{
    "name": "@pixeloven/cli-addon-generators",
    "version": "6.0.0-rc.18",
    "description": "PixelOven CLI Common code generators",
    "main": "dist/lib/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/"
    ],
    "homepage": "https://www.pixeloven.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pixeloven/pixeloven.git"
    },
    "author": "Brian Gebel",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@pixeloven-core/common": "^6.0.0-rc.12",
        "@pixeloven-core/validation": "^6.0.0-rc.12",
        "@pixeloven/cli": "^6.0.0-rc.18"
    },
    "devDependencies": {
        "@pixeloven-tooling/compiler": "^6.0.0-rc.12",
        "@pixeloven-tooling/linter": "^6.0.0-rc.12",
        "@pixeloven-tooling/pretty": "^6.0.0-rc.5",
        "@pixeloven-tooling/test": "^6.0.0-rc.12",
        "copyfiles": "2.2.0",
        "lint-staged": "10.0.7"
    },
    "scripts": {
        "compile": "pixeloven-compiler ts",
        "compile:watch": "pixeloven-compiler ts --watch",
        "lint": "pixeloven-linter ts src/**/*.{ts,tsx}",
        "lint:ts": "pixeloven-linter ts src/**/*.{ts,tsx}",
        "pretty": "pixeloven-pretty **/*.{json,md,ts,tsx}",
        "precommit": "lint-staged",
        "test": "exit 0",
        "test:ci": "exit 0",
        "test:watch": "exit 0",
        "postcompile": "copyfiles -a -u 2 \"src/templates/**/*\" dist/lib/templates"
    },
    "lint-staged": {
        "*.{json,md}": [
            "pixeloven-pretty"
        ],
        "src/**/*.{ts,tsx}": [
            "pixeloven-pretty",
            "pixeloven-linter ts --fix",
            "pixeloven-linter ts"
        ]
    }
}
