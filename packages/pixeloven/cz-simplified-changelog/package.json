{
  "name": "@pixeloven/cz-simplified-changelog",
  "version": "6.0.0-beta.22",
  "description": "Commit citizen simplified changelog prompt",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "homepage": "https://www.pixeloven.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "author": "Brian Gebel",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "conventional-commit-types": "2.1.1",
    "lodash.map": "4.6.0",
    "longest": "2.0.1",
    "right-pad": "1.0.1",
    "word-wrap": "1.2.3"
  },
  "devDependencies": {
    "@pixeloven-tooling/compiler": "^6.0.0-beta.22",
    "@pixeloven-tooling/linter": "^6.0.0-beta.22",
    "@pixeloven-tooling/pretty": "^6.0.0-beta.22",
    "@pixeloven-tooling/test": "^6.0.0-beta.22",
    "@types/lodash.map": "4.6.13",
    "commitizen": "4.0.3",
    "lint-staged": "9.5.0"
  },
  "scripts": {
    "compile": "pixeloven-compiler ts",
    "lint": "pixeloven-linter ts src/**/*.{ts,tsx}",
    "lint:ts": "pixeloven-linter ts src/**/*.{ts,tsx}",
    "pretty": "yarn pretty:ts",
    "pretty:ts": "pixeloven-pretty ts src/**/*.{ts,tsx}",
    "precommit": "lint-staged",
    "test": "pixeloven-test --color --coverage",
    "test:ci": "pixeloven-test --ci --coverage",
    "test:watch": "pixeloven-test --watch"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pixeloven-pretty ts",
      "pixeloven-linter ts --fix",
      "pixeloven-linter ts",
      "git add"
    ]
  }
}
