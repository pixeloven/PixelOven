{
  "name": "@pixeloven/site",
  "version": "6.0.0-beta.9",
  "description": "Example project using the framework",
  "homepage": "https://github.com/pixeloven/pixeloven",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "author": "Brian Gebel",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@pixeloven-react/routing": "^6.0.0-beta.9",
    "classnames": "2.2.6",
    "express": "4.17.1",
    "express-winston": "3.2.1",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "react-helmet": "6.0.0-beta",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@pixeloven/cli": "^6.0.0-beta.9",
    "@pixeloven/cli-addon-generators": "^6.0.0-beta.9",
    "@pixeloven/cli-addon-storybook": "^6.0.0-beta.9",
    "@pixeloven/cli-addon-webpack": "^6.0.0-beta.9",
    "@types/classnames": "2.2.9",
    "@types/enzyme": "3.10.3",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/express": "4.17.0",
    "@types/express-winston": "3.0.0",
    "@types/react": "16.9.10",
    "@types/react-dom": "16.9.1",
    "@types/react-helmet": "5.0.8",
    "@types/react-router": "5.1.2",
    "@types/react-router-dom": "5.1.0",
    "@types/supertest": "2.0.7",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "lint-staged": "9.2.5",
    "supertest": "3.3.0"
  },
  "devEngines": {
    "node": "8.x || 9.x || 10.x"
  },
  "scripts": {
    "build:development": "pixeloven webpack build --client ./src/client/index.tsx --server ./src/server/index.ts --stats --source-map --path /",
    "build:production": "pixeloven webpack build --client ./src/client/index.tsx --server ./src/server/index.ts --path /",
    "build:story": "pixeloven story build",
    "document": "pixeloven document ts ./src",
    "generate": "pixeloven generate",
    "lint": "yarn lint:ts && yarn lint:scss",
    "lint:ts": "pixeloven lint ts ./src/**/*.{ts,tsx}",
    "lint:scss": "pixeloven lint scss ./src/**/*.scss",
    "pretty": "yarn pretty:ts && yarn pretty:scss",
    "pretty:ts": "pixeloven pretty ts ./src/**/*.{ts,tsx}",
    "pretty:scss": "pixeloven pretty scss ./src/**/*.scss",
    "prebuild": "pixeloven delete dist",
    "precommit": "lint-staged",
    "predocument": "pixeloven delete docs",
    "pretest": "pixeloven delete coverage",
    "start:development": "pixeloven webpack start --client ./src/client/index.tsx --server ./src/server/index.ts --development --source-map --host 0.0.0.0 --path / --port 48080 --protocol http --stats",
    "start:production": "NODE_ENV=production node ./dist/server.js",
    "start:story": "pixeloven story start",
    "test": "pixeloven test --color --coverage",
    "test:ci": "pixeloven test --ci --findRelatedTests",
    "test:watch": "pixeloven test watch"
  },
  "lint-staged": {
    "src/**/*.{scss}": [
      "yarn pixeloven pretty scss",
      "yarn pixeloven lint scss",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "yarn pixeloven pretty ts",
      "yarn pixeloven lint ts",
      "git add"
    ]
  }
}
