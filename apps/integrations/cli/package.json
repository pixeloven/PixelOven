{
  "name": "@pixeloven/integrations",
  "version": "1.0.0",
  "description": "Integration tests for the core CLI",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "homepage": "https://www.pixeloven.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "author": "Brian Gebel",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@pixeloven/cli": "6.0.0-beta.33"
  },
  "devDependencies": {
    "lint-staged": "9.5.0"
  },
  "scripts": {
    "po:bootstrap": "mkdir coverage dist docs stats stories",
    "po:compile": "pixeloven compile ts",
    "po:delete:coverage": "pixeloven delete coverage",
    "po:delete:dist": "pixeloven delete dist",
    "po:delete:docs": "pixeloven delete docs",
    "po:delete:stats": "pixeloven delete stats",
    "po:delete:stories": "pixeloven delete stories",
    "po:help": "pixeloven help",
    "po:lint:ts": "pixeloven lint ts ./src/**/*.{ts,tsx}",
    "po:lint:scss": "pixeloven lint scss ./src/**/*.scss",
    "po:precommit": "lint-staged",
    "po:pretty:ts": "pixeloven pretty ./src/**/*.{ts,tsx}",
    "po:pretty:scss": "pixeloven pretty ./src/**/*.scss",
    "po:test": "pixeloven test --color --coverage",
    "po:test:ci": "pixeloven test --ci --coverage",
    "po:test:watch": "pixeloven test --watch"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn pixeloven pretty",
      "yarn pixeloven lint ts --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "yarn pixeloven pretty",
      "yarn pixeloven lint scss --fix",
      "git add"
    ]
  }
}
