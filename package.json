{
  "name": "pixeloven",
  "author": "Brian Gebel <brian@pixeloven.com>",
  "description": "Framework for build Client and Server JavaScript applications",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.0.0"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "all:bootstrap": "yarn install && yarn packages:compile && yarn all:linker",
    "all:clean": "yarn lerna clean --yes",
    "all:commit": "git-cz",
    "all:compile": "yarn all:linker && lerna run compile",
    "all:linker": "yarn lerna link",
    "all:lint": "yarn all:linker && lerna run lint",
    "all:pretty": "yarn all:linker && lerna run pretty",
    "all:test": "yarn all:linker && lerna run test",
    "all:document": "yarn all:linker && lerna run document",
    "all:report:coverage": "cat ./**/**/coverage/lcov.info | codecov",
    "examples:build": "yarn all:linker && lerna run build --scope \"@examples/*\"",
    "examples:compile": "yarn all:linker && lerna run compile --scope \"@examples/*\"",
    "examples:document": "yarn all:linker && lerna run document --scope \"@examples/*\"",
    "examples:lint": "yarn all:linker && lerna run lint --scope \"@examples/*\"",
    "examples:pretty": "yarn all:linker && lerna run pretty --scope \"@examples/*\"",
    "examples:test": "yarn all:linker && lerna run test --scope \"@examples/*\"",
    "packages:compile": "yarn all:linker && lerna run compile --scope \"@pixeloven/*\"",
    "packages:document": "yarn all:linker && lerna run document --scope \"@pixeloven/*\"",
    "packages:lint": "yarn all:linker && lerna run lint --scope \"@pixeloven/*\"",
    "packages:pretty": "yarn all:linker && lerna run pretty --scope \"@pixeloven/*\"",
    "packages:test": "yarn all:linker && lerna run test --scope \"@pixeloven/*\"",
    "preversion": "yarn all:bootstrap && yarn all:lint && yarn all:compile && yarn all:build && yarn all:test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{examples,packages}/**/*.scss": [
      "lerna run pixeloven pretty scss",
      "lerna run pixeloven lint scss",
      "git add"
    ],
    "{examples,packages}/**/*.{ts,tsx}": [
      "lerna run pixeloven pretty ts",
      "lerna run pixeloven lint ts",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "codecov": "3.5.0",
    "commitizen": "4.0.3",
    "husky": "3.0.1",
    "lerna": "3.16.4",
    "lint-staged": "9.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/config-conventional"
    }
  }
}
