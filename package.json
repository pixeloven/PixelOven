{
  "name": "pixeloven",
  "author": "Brian Gebel <brian@pixeloven.com>",
  "description": "Framework for build Client and Server JavaScript applications",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.0.0"
  },
  "workspaces": [
    "apps/**/*",
    "packages/**/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "codecov": "3.6.1",
    "commitizen": "4.0.3",
    "husky": "3.0.9",
    "lerna": "3.16.4"
  },
  "scripts": {
    "all:bootstrap": "yarn install && yarn all:compile",
    "all:build:production": "yarn pixeloven:build:production && yarn examples:build:production",
    "all:build:development": "yarn pixeloven:build:production && yarn examples:build:production",
    "all:clean": "lerna clean --yes && rm -rf node_modules",
    "all:commit": "git-cz",
    "all:compile": "yarn pixeloven:compile && yarn examples:compile",
    "all:linker": "lerna link",
    "all:lint": "lerna run lint",
    "all:lint:ts": "lerna run lint:ts",
    "all:lint:scss": "lerna run lint:scss",
    "all:pretty": "lerna run pretty",
    "all:pretty:ts": "lerna run pretty:ts",
    "all:pretty:scss": "lerna run pretty:scss",
    "all:test": "lerna run test",
    "all:document": "lerna run document",
    "all:report:coverage": "yarn codecov -t \"$CODECOV_TOKEN\"",
    "examples:build:development": "lerna run build:development --scope=@examples/*",
    "examples:build:production": "lerna run build:production --scope=@examples/*",
    "examples:compile": "lerna run compile --scope=@examples/* && yarn all:linker",
    "examples:document": "lerna run document --scope=@examples/*",
    "examples:lint": "lerna run lint --scope=@examples/*",
    "examples:lint:ts": "lerna run lint:ts --scope=@examples/*",
    "examples:lint:scss": "lerna run lint:scss --scope=@examples/*",
    "examples:pretty": "lerna run pretty --scope=@examples/*",
    "examples:pretty:ts": "lerna run pretty:ts --scope=@examples/*",
    "examples:pretty:scss": "lerna run pretty:scss --scope=@examples/*",
    "examples:test": "lerna run test --scope=@examples/*",
    "examples:test:ci": "lerna run test:ci --scope=@examples/*",
    "pixeloven:build:development": "lerna run build:development --scope=@pixeloven/*",
    "pixeloven:build:production": "lerna run build:production --scope=@pixeloven/*",
    "pixeloven:compile": "lerna run compile --scope={@pixeloven,@pixeloven-*}/* && yarn all:linker",
    "pixeloven:document": "lerna run document --scope={@pixeloven,@pixeloven-*}/*",
    "pixeloven:lint": "lerna run lint --scope={@pixeloven,@pixeloven-*}/*",
    "pixeloven:lint:ts": "lerna run lint:ts --scope={@pixeloven,@pixeloven-*}/*",
    "pixeloven:lint:scss": "lerna run lint:scss --scope={@pixeloven,@pixeloven-*}/*",
    "pixeloven:pretty": "lerna run pretty --scope={@pixeloven,@pixeloven-*}/*",
    "pixeloven:pretty:ts": "lerna run pretty:ts --scope={@pixeloven,@pixeloven-*}/*",
    "pixeloven:pretty:scss": "lerna run pretty:scss --scope={@pixeloven,@pixeloven-*}/*",
    "pixeloven:test": "lerna run test --scope={@pixeloven,@pixeloven-*}/*",
    "pixeloven:test:ci": "lerna run test:ci --scope={@pixeloven,@pixeloven-*}/*",
    "preversion": "yarn all:bootstrap && yarn all:lint && yarn all:compile && yarn all:build:production && yarn all:test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/config-conventional"
    }
  }
}
