{
  "name": "pixeloven",
  "author": "Brian Gebel <brian@pixeloven.com>",
  "description": "Framework for build Client and Server JavaScript applications",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.0.0"
  },
  "workspaces": [
    "examples/**/*",
    "packages/**/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "codecov": "3.5.0",
    "commitizen": "4.0.3",
    "husky": "3.0.5",
    "lerna": "3.16.4"
  },
  "scripts": {
    "all:bootstrap": "yarn install && yarn packages:compile",
    "all:build": "yarn examples:build",
    "all:clean": "lerna clean --yes && rm -rf node_modules",
    "all:commit": "git-cz",
    "all:compile": "yarn packages:compile && yarn examples:compile",
    "all:linker": "lerna link",
    "all:lint": "lerna run lint",
    "all:lint:ts": "lerna run lint:ts",
    "all:lint:scss": "lerna run lint:scss",
    "all:pretty": "lerna run pretty",
    "all:pretty:ts": "lerna run pretty:ts",
    "all:pretty:scss": "lerna run pretty:scss",
    "all:test": "lerna run test",
    "all:document": "lerna run document",
    "all:report:coverage": "cat ./**/**/coverage/lcov.info | codecov",
    "examples:build": "lerna run build --scope @examples/*",
    "examples:compile": "lerna run compile --scope @examples/* && yarn all:linker",
    "examples:document": "lerna run document --scope @examples/*",
    "examples:lint": "lerna run lint --scope @examples/*",
    "examples:lint:ts": "lerna run lint:ts --scope @examples/*",
    "examples:lint:scss": "lerna run lint:scss --scope @examples/*",
    "examples:pretty": "lerna run pretty --scope @examples/*",
    "examples:pretty:ts": "lerna run pretty:ts --scope @examples/*",
    "examples:pretty:scss": "lerna run pretty:scss --scope @examples/*",
    "examples:report:coverage": "cat ./examples/**/coverage/lcov.info | codecov",
    "examples:test": "lerna run test --scope @examples/*",
    "examples:test:ci": "lerna run test:ci --scope @examples/*",
    "packages:compile": "lerna run compile --scope={@pixeloven,@pixeloven-*}/* && yarn all:linker",
    "packages:document": "lerna run document --scope={@pixeloven,@pixeloven-*}/*",
    "packages:lint": "lerna run lint --scope={@pixeloven,@pixeloven-*}/*",
    "packages:lint:ts": "lerna run lint:ts --scope={@pixeloven,@pixeloven-*}/*",
    "packages:lint:scss": "lerna run lint:scss --scope={@pixeloven,@pixeloven-*}/*",
    "packages:pretty": "lerna run pretty --scope={@pixeloven,@pixeloven-*}/*",
    "packages:pretty:ts": "lerna run pretty:ts --scope={@pixeloven,@pixeloven-*}/*",
    "packages:pretty:scss": "lerna run pretty:scss --scope={@pixeloven,@pixeloven-*}/*",
    "packages:report:coverage": "cat ./packages/**/coverage/lcov.info | codecov",
    "packages:test": "lerna run test --scope={@pixeloven,@pixeloven-*}/*",
    "packages:test:ci": "lerna run test:ci --scope={@pixeloven,@pixeloven-*}/*",
    "preversion": "yarn all:bootstrap && yarn all:lint && yarn all:compile && yarn all:build && yarn all:test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/config-conventional"
    }
  }
}
