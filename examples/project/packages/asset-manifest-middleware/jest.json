{
  "bail": true,
  "verbose": true,
  "preset": "ts-jest",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
  ],
  "testMatch": [
    "<rootDir>/src/**/*.test.(j|t)s?(x)"
  ],
  "testEnvironment": "node",
  "testURL": "http://localhost",
  "moduleFileExtensions": [
    "js",
    "json",
    "jsx",
    "ts",
    "tsx"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 0,
      "lines": 0,
      "statements": 0
    }
  },
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{js,jsx,ts,tsx}",
    "!**/node_modules/**"
  ],
  "maxConcurrency": 1
}
