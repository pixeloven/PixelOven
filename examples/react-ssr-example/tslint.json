{
  "defaultSeverity": "error",
  "linterOptions": {
    "exclude": [
      ".circleci",
      "dist",
      "coverage",
      "node_modules",
      "public"
    ]
  },
  "extends": [
    "tslint:latest",
    "tslint-config-prettier",
    "tslint-eslint-rules",
    "tslint-react"
  ],
  "rules": {
    "arrow-parens": false,
    "jsx-wrap-multiline" : false,
    "interface-name" : false,
    "no-implicit-dependencies": false,
    "no-submodule-imports": false,
    "no-console": false,
    "no-any": true,
    "no-null-keyword": true
  }
}
